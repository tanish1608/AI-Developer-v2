import React from "react";

const TodoDetail = ({ todo }) => {
const containerStyle = {
maxWidth: "800px",
margin: "20px auto",
padding: "20px",
backgroundColor: "#f0f0f0",
borderRadius: "8px",
textAlign: "center",
fontFamily: "Arial, sans-serif",
};

const headingStyle = {
fontSize: "24px",
color: "#333",
};

const paragraphStyle = {
fontSize: "18px",
color: "#666",
lineHeight: "1.6",
};

return (
<div style={containerStyle}>
<h1 style={headingStyle}>{todo.title}</h1>
<p style={paragraphStyle}>Deadline: {todo.deadline}</p>
<p style={paragraphStyle}>
{todo.description}
</p>
</div>
);
};

export default TodoDetail;